/* pages/user/user.wxss */
/**index.wxss**/
page{
  background-color: #fcfcfd;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 168rpx;
  height: 168rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.user-btn{
  width: 168rpx;
  height: 168rpx;
  overflow: hidden;
  position: relative;
  border-radius: 50%;
  font-size: 24rpx;
  color: white;
  margin: 20rpx;
  display: flex;
  text-align: center;
}
.user-btn text{
  margin: auto;
  padding: 10rpx;
}
.user-btn image{
  width: 168rpx;
  height: 168rpx;
  position: absolute;
  z-index: -1;
}
.usermotto {
  margin-top: 200px;
}
.footer{
  width: 100%;
  height: 900rpx;
  /* background-color: orange; */
  position: fixed;
  bottom: 0;
}
.bg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}
.footer .logo{
  height: 300rpx;
  /* margin auto 只有块级作用才生效 */
  display: block;
  margin: 0 auto;
  border-radius: 95rpx;
}
.footer .btn{
  width: 400rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border: 3rpx solid orangered;
  border-radius: 50rpx;
  color: orangered;
  margin: 20rpx auto;
}
